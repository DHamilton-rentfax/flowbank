{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "runtime": "nodejs20"
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": {
          "functionId": "nextApp",
          "region": "us-central1"
        }
      }
    ],
    "headers": [
      {
        "source": "/_next/static/**",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
        ]
      },
      {
        "source": "**/*.@(js|css)",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache" }
        ]
      }
    ]
  },
  "emulators": {
    "hub":       { "host": "127.0.0.1", "port": 4400 },
    "ui":        { "host": "127.0.0.1", "port": 4000 },
    "logging":   { "host": "127.0.0.1", "port": 4500 },
    "firestore": { "host": "127.0.0.1", "port": 8080 },
    "hosting":   { "host": "127.0.0.1", "port": 5000 },
    "functions": { "host": "127.0.0.1", "port": 5001 },
    "eventarc":  { "host": "127.0.0.1", "port": 9299 },
    "tasks":     { "host": "127.0.0.1", "port": 9499 }
  }
}
