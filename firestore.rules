rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own documents
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth.uid == userId;
    }

    // Teams can be read by anyone, but only written by the owner
    match /teams/{teamId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == resource.data.owner;
    }
    match /teams/{teamId}/{documents=**} {
       allow read, write: if request.auth != null;
    }

    // Team audit logs are backend-only
    match /teamAuditLogs/{logId} {
        allow read, write: if false;
    }
    
    // Public blog posts
    match /blogPosts/{postId} {
        allow read: if resource.data.published == true;
        allow write: if request.auth != null && request.auth.token.role == 'admin';
    }
  }
}
