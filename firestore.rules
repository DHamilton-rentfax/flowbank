
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Allow users to read/write their own data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow logged-in users to read published blog posts
    match /blogPosts/{postId} {
      allow read: if request.auth != null && resource.data.published == true;
    }

    // Allow admins to write to blog posts
    match /blogPosts/{postId} {
      // In a real app, you would check for a custom claim like request.auth.token.admin == true
      // For now, we allow any authenticated user to write for simplicity in the workshop.
      allow write: if request.auth != null;
    }
    
    // Allow admins to manage letters
    match /letters/{doc} {
       // In a real app, you would check for a custom claim like request.auth.token.admin == true
      allow read, write: if request.auth != null;
    }
  }
}
