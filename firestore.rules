
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuth() {
      return request.auth != null;
    }
    function userId() {
      return request.auth.uid;
    }
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(userId())).data;
    }
    function userTeamId() {
      return getUserData().teamId;
    }
    function isTeamOwner(teamId) {
      return get(/databases/$(database)/documents/teams/$(teamId)).data.owner == userId();
    }
    function isTeamMember(teamId) {
      return exists(/databases/$(database)/documents/teams/$(teamId)/members/$(userId()));
    }

    // Users can only read/write their own data
    match /users/{uid}/{documents=**} {
      allow read, write: if isAuth() && uid == userId();
    }

    // Blog posts are public
    match /blogPosts/{postId} {
      allow read: if true;
      allow write: if false; // Should be written via admin/server action
    }

    // Teams collection security
    match /teams/{teamId} {
      allow read: if isAuth() && isTeamMember(teamId);
      // Only team owner can update team details (e.g., name)
      allow update: if isAuth() && isTeamOwner(teamId);
      // Disallow client-side creation/deletion of teams
      allow create, delete: if false;
    }

    match /teams/{teamId}/members/{memberId} {
      // Any team member can see who else is on the team
      allow read: if isAuth() && isTeamMember(teamId);
      // Only the team owner can add/remove members (via server actions)
      allow create, delete: if isAuth() && isTeamOwner(teamId);
      // Members cannot update their own role or status directly
      allow update: if false;
    }

    match /teams/{teamId}/invites/{inviteId} {
        // Team members can see pending invites
        allow read: if isAuth() && isTeamMember(teamId);
        // Only owner can create/delete invites (via server actions)
        allow create, delete: if isAuth() && isTeamOwner(teamId);
        allow update: if false;
    }
    
    match /teams/{teamId}/auditLogs/{logId} {
        // Team members can read audit logs for their team
        allow read: if isAuth() && isTeamMember(teamId);
        // Logs are append-only, written by server actions
        allow write: if false;
    }

    // Letters collection
    match /letters/{letterId} {
      allow read: if true;
      allow write: if false; // Admin only
    }
  }
}
