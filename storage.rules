rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Allow everyone to read published blog assets (images, files)
    match /blogs/{allPaths=**} {
      allow read: if true; // Publicly accessible blog images
      allow write: if request.auth != null; // Only signed-in users can upload
    }

    // User profile images (avatars, etc.)
    match /users/{userId}/{allPaths=**} {
      // Each user can read their own files
      allow read: if request.auth != null;
      // Each user can write only their own folder
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Default fallback: deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}